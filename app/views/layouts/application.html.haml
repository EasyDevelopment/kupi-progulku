!!!
%html
  %head
    %title Купи Прогулку
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Купи Прогулку', root_path, class: 'brand'
          .pull-right
            - if current_user
              = image_tag current_user.profile.photo_url
              = current_user.profile.nickname
              = link_to 'Выйти', sign_out_path
            - else
              = link_to 'Войти через вКонтакте', '/auth/vkontakte'
    .container
      = bootstrap_flash
      = yield